<!-- Loop over each object in the blogposts array -->
{{#each blogposts as |blogpost| }}
<div class="row mb-4 blogpost">
  <div class="col-md-5">
    <h2>
      <a href="/blogpost/{{blogpost.id}}">{{blogpost.name}}</a>
    </h2>
    <p>
      <span for="img" aria-label="money">ðŸ’²</span>
      <!-- Pass needed_funding value to the helper function -->
      <span class="dollar-amount">{{format_amount blogpost.needed_funding}}</span>
      needed!
    </p>
    <p>Created by {{blogpost.user.name}} on {{format_date blogpost.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blogpost.description}}
    </p>
  </div>
</div>
{{/each}}
